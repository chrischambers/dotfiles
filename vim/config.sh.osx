#!/bin/sh

# MacVim Configuration: {{{
# ----------------------------------------------------------------------------
vim="mvim -v"
alias vi="$vim"
alias vim="$vim"
export EDITOR="$vim"
export VISUAL="$vim -f --servername Vim1 --remote-silent"
export GIT_EDITOR="$vim"
alias gvim="mvim"
function g () {
    mvim -f --servername Vim1 --remote-silent $1 &
}
