#!/bin/sh

# MacVim Configuration: {{{
# ----------------------------------------------------------------------------
vim="mvim -v"
alias vi="$vim"
alias vim="$vim"
alias gvim="mvim -f"

function visvim () {
    mvim -v $1
}
export EDITOR="$vim"
export VISUAL="visvim"

export GIT_EDITOR="$vim"
function g () {
    mvim -f --servername Vim1 --remote-silent $1 &
}
