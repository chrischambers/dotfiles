#!/bin/env bash

source ~/.shell_common

source_before_file_for ".bashrc"
source_platform_specific_file_for ".bashrc"

common_config_files=$(find $DOTFILES -type f -name "*.sh");
for f in  $common_config_files; do
  source $f
done

config_files=$(find $DOTFILES -type f -name "*.bash")
for f in $config_files; do
  source $f
done

source_after_file_for ".bashrc"
source_local_file_for ".bashrc"
